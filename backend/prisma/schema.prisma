generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model stuffs {
    id          Int      @id @default(autoincrement())
    name        String
    description String?
    price       Float?
    image       String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model users {
    user_id    Int      @id @default(autoincrement())
    email      String   @unique
    password   String
    name       String?
    verified   Boolean  @default(false)
    createdAt  DateTime @default(now())
}

model emailToken {
    user_id   Int      @id
    token     String   
}
